{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "cppbuild",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-g",
                "${file}",
                "-I${workspaceFolder}/cryptopp" // Додайте шлях до папки бібліотеки тут
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [ "$gcc" ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
